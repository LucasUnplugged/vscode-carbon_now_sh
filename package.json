{
    "name": "carbon-now-sh",
    "displayName": "carbon-now-sh",
    "description": "A Code package to open the current editor content in carbon.now.sh",
    "version": "1.2.3",
    "publisher": "ericadamski",
    "engines": {
        "vscode": "^1.18.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:carbon.show"
    ],
    "main": "./out/carbon",
    "contributes": {
        "commands": [
            {
                "command": "carbon.show",
                "title": "Carbon"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "editorHasSelection",
                    "command": "carbon.show"
                }
            ]
        },
        "keybindings": [
            {
                "key": "alt+cmd+a",
                "command": "carbon.show"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Carbon configuration",
            "properties": {
                "carbon.autoAdjustWidth": {
                    "type": "boolean",
                    "default": true,
                    "description": "Automatically adjust the width of the window."
                },
                "carbon.backgroundColor": {
                    "type": "string",
                    "default": "rgba(171,184,195,100)",
                    "description": "RGBA color to use as the background behind the window.",
                    "pattern": "^rgba\\((([01]?\\d\\d?|2[0-4]\\d|25[0-5]),\\s*){3}([01]|(0?\\.\\d+))\\)$"
                },
                "carbon.dropShadow": {
                    "type": "boolean",
                    "default": true,
                    "description": "Render a drop shadow on the window."
                },
                "carbon.fontFamily": {
                    "type": "string",
                    "default": "Hack",
                    "description": "The font family to use.",
                    "enum": [
                        "dm",
                        "Anonymous Pro",
                        "Droid Sans Mono",
                        "Fantasque Sans Mono",
                        "Fira Code",
                        "Hack",
                        "IBM Plex Mono",
                        "Inconsolata",
                        "Iosevka",
                        "Monoid",
                        "Source Code Pro",
                        "Space Mono",
                        "Ubuntu Mono"
                    ]
                },
                "carbon.fontSize": {
                    "type": "integer",
                    "default": 13,
                    "description": "The font size. Min: 10, Max: 18",
                    "minimum": 10,
                    "maximum": 18
                },
                "carbon.lineNumbers": {
                    "type": "boolean",
                    "default": false,
                    "description": "Show line numbers."
                },
                "carbon.paddingHorizontal": {
                    "type": "integer",
                    "default": 32,
                    "description": "The amount of horizontal padding applied to the window.  Min: 0, Max: 100",
                    "minimum": 0,
                    "maximum": 100
                },
                "carbon.paddingVertical": {
                    "type": "integer",
                    "default": 48,
                    "description": "The amount of vertical padding applied to the window. Min: 0, Max: 200",
                    "minimum": 0,
                    "maximum": 200
                },
                "carbon.theme": {
                    "type": "string",
                    "default": "seti",
                    "description": "Pick the theme to use.",
                    "enum": [
                        "3024-night",
                        "blackboard",
                        "base16-dark",
                        "base16-light",
                        "cobalt",
                        "dracula",
                        "duotone-dark",
                        "hopscotch",
                        "material",
                        "monokai",
                        "night-owl",
                        "oceanic-next",
                        "one-dark",
                        "panda-syntax",
                        "paraiso-dark",
                        "seti",
                        "solarized dark",
                        "solarized light",
                        "tomorrow-night-bright",
                        "lucario",
                        "twilight",
                        "verminal",
                        "yeti",
                        "zenburn"
                    ]
                },
                "carbon.url": {
                    "type": "string",
                    "default": "https://carbon.now.sh",
                    "description": "Change the root url (useful for development)."
                },
                "carbon.windowControls": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show window controls."
                },
                "carbon.useBrowserCache": {
                    "type": "boolean",
                    "default": false,
                    "description": "Use your browsers already configured Carbon settings."
                },
                "carbon.windowTheme": {
                    "type": "string",
                    "default": "none",
                    "description": "The window theme to use. Options: none, sharp, bw ",
                    "enum": [
                        "none",
                        "sharp",
                        "bw"
                    ]
                },
                "carbon.lineHeight": {
                    "type": "integer",
                    "default": 133,
                    "description": "The line height to use. Min: 90, Max: 250",
                    "minimum": 90,
                    "maximum": 250
                },
                "carbon.dropShadowOffset": {
                    "type": "integer",
                    "default": 20,
                    "description": "The drop shadow offset. Min: 0, Max: 100",
                    "minimum": 0,
                    "maximum": 100
                },
                "carbon.dropShadowBlurRadius": {
                    "type": "integer",
                    "default": 68,
                    "description": "The drop shadow blur radius. Min: 0, Max: 100",
                    "minimum": 0,
                    "maximum": 100
                },
                "carbon.showWatermark": {
                    "type": "boolean",
                    "default": false,
                    "description": "Show a watermark."
                },
                "carbon.timestamp": {
                    "type": "boolean",
                    "default": false,
                    "description": "Timestamp file name."
                },
                "carbon.exportSize": {
                    "type": "string",
                    "default": "2x",
                    "description": "Export size.",
                    "enum": [
                        "1x",
                        "2x",
                        "4x"
                    ]
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/mocha": "^5.2.5",
        "@types/node": "^10.17.50",
        "@types/vscode": "^1.52.0",
        "typescript": "^3.9.7",
        "vscode-test": "^1.4.1"
    }
}
